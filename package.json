{
  "name": "pciu-cgpa-calculator",
  "version": "1.0",
  "private": false,
  "scripts": {
    "postinstall": "npm run build-critical && npm run build",
    "start": "set NODE_ENV=production && node ./bin/www",
    "dev": "set NODE_ENV=development && nodemon ./bin/www",
    "build": "parcel build --no-source-maps public/index.htm",
    "build-critical": "critical public/index.html --base public --inline > public/index.htm"
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "dist/*"
    ]
  },
  "dependencies": {
    "axios": "^0.27.2",
    "express": "~4.16.1",
    "form-data": "^4.0.0",
    "node-html-parser": "^5.3.3"
  },
  "devDependencies": {
    "critical": "^4.0.1",
    "nodemon": "^2.0.16",
    "parcel": "^2.6.1"
  }
}