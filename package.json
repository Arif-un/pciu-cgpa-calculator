{
  "name": "pciu-cgpa-calculator",
  "version": "1.0",
  "private": false,
  "scripts": {
    "start": "set NODE_ENV=production && node ./backend/server.js",
    "dev": "set NODE_ENV=development && rm -rf ./build-hash.txt && nodemon ./backend/server.js",
    "build-parcel": "rm -rf dist && parcel build --no-source-maps frontend/index.html && cp -r frontend/images dist/images",
    "build-terser": "node minify",
    "build": "npm run build-parcel && npm run build-terser",
    "vercel-build": "npm run build && npm prune --production"
  },
  "nodemonConfig": {
    "ignore": [
      "frontend/*",
      "dist/*"
    ]
  },
  "dependencies": {
    "axios": "^1.4.0",
    "express": "~4.18.2",
    "form-data": "^4.0.0",
    "node-html-parser": "^6.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "parcel": "^2.9.3",
    "terser": "^5.19.2"
  }
}